<?xml version="1.0" encoding="utf-8"?>
<!-- Temporary KIT theme mapping to existing LXX resources. Replace drawables/colors per Figma kit. -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="KeyboardTheme.KIT_Light" parent="KeyboardIcons.LXX_Light">
        <item name="inputViewStyle">@style/InputView.LXX</item>
        <item name="keyboardStyle">@style/Keyboard.KIT_Light</item>
        <item name="keyboardViewStyle">@style/KeyboardView.KIT_Light</item>
